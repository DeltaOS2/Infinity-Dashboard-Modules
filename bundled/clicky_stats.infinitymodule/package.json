{
  "name": "Clicky Stats",
  "description": "Displays the stats from Clicky.com for today's unique visitors and bounce rate",
  "author": "FIPLAB Ltd",
  "website": "https://infinitydashboard.com/",
  "category": "business",
  "bundleID": "com.fiplab.clickystats",
  "version": "1.0.0",
  "minimumRefreshInterval": 300,

  "user_options": [
    {
      "title": "Username",
      "name": "username",      
      "type": "string",
      "tooltip": "Your clicky.com username",
      "default": "",
      "required": true,
    },
    {
      "title": "Password",
      "name": "password",      
      "type": "string",
      "options": {
        "secure": true
      },
      "tooltip": "Your clicky.com password",
      "default": "",
      "required": true,
    },
    {
      "title": "Site ID",
      "name": "siteID",      
      "type": "string",
      "tooltip": "The ID of the site you want to monitor",
      "default": "",
      "required": true,
    },
    {
      "title": "Show As",
      "name": "display",      
      "type": "string",
      "options": [
        {"title": "Unique Count", "name":"unique"},
        {"title": "Bounce Rate", "name":"bounce"},
        {"title": "Unique Count (Bounce Rate)", "name":"both"},
      ],

      "default": "both",
      "required": true,
    }
  ]  
}