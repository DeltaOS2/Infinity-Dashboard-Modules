{
  "name": "YouTube Channel Stats",
  "description": "Displays the current total subscriber count, comment count, or viewCount",
  "author": "FIPLAB Ltd",
  "website": "https://infinitydashboard.com/",
  "category": "social",
  "bundleID": "com.fiplab.youtube",
  "version": "1.0.0",
  "minimumRefreshInterval": 600,

  "user_options": [
    {
      "title": "YouTube API Key",
      "name": "apiKey",
      "type": "string",
      "tooltip": "Your YouTube API Key",
      "default": "",
      "required": true
    },
    {
      "title": "YouTube Channel ID",
      "name": "channelID",
      "type": "string",
      "tooltip": "",
      "required": true
    },
    {
      "title": "Show",
      "name": "display",
      "type": "string",
      "options": [
        {"title": "View Count", "name": "viewCount"},
        {"title": "Comment Count", "name": "commentCount"},
        {"title": "Subscriber Count", "name": "subscriberCount"},
        {"title": "Video Count", "name": "videoCount"}
      ],
      "default": "subscriberCount",
      "required": true,
    },
  ]
}
